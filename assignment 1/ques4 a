#include<iostream>
using namespace std;
void createArray(int* arr,int n){
    cout<<"Enter elements of array"<<endl;
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
}

void displayArray(int* arr,int n){
    cout<<"Array is ";
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}

void reverseArray(int* arr,int n){
    createArray(arr,n);
    for(int i=0;i<=n/2;i++){
        int temp=arr[i];
        arr[i]=arr[n-i-1];
        arr[n-i-1]=temp;
    }
    displayArray(arr,n);
}

int main()
{
int a[10];
reverseArray(a,5);
return 0;
}
