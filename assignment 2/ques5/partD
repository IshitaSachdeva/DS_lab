#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter size of upper triangular matrix (n x n): ";
    cin >> n;

    int size = n * (n + 1) / 2;
    int arr[size];

    cout << "Enter elements of upper triangular matrix row-wise:\n";
    for (int i = 0; i < n; i++) {
        for (int j = i; j < n; j++) {
            int idx = (i * (2 * n - i + 1)) / 2 + (j - i);
            cin >> arr[idx];
        }
    }

    cout << "\nFull matrix is:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j >= i) {
                int idx = (i * (2 * n - i + 1)) / 2 + (j - i);
                cout << arr[idx] << " ";
            } else {
                cout << 0 << " ";
            }
        }
        cout << "\n";
    }

    return 0;
}
