#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    
    Node(int val) {
        data = val;
        next = NULL;
    }
};

class LinkedList {
public:
    Node* head;

    LinkedList() {
        head = NULL;
    }

    void insert(int val) {
        Node* temp = new Node(val);

        if (head == NULL) {
            head = temp;
            return;
        }

        Node* curr = head;
        while (curr->next != NULL && curr->next != head)
            curr = curr->next;

        curr->next = temp;
    }

    
    bool isCircular() {
        if (head == NULL)
            return false;

        Node* curr = head->next;

        while (curr != NULL && curr != head)
            curr = curr->next;

        return (curr == head);   // if we reached head again â†’ circular
    }
};

int main() {
    LinkedList ll;

    
    ll.insert(10);
    ll.insert(20);
    ll.insert(30);

    
    ll.head->next->next->next = ll.head;

    if (ll.isCircular())
        cout << "The Linked List is Circular." << endl;
    else
        cout << "The Linked List is NOT Circular." << endl;

    return 0;
}
